on run argv
	tell application "Messages"
		activate
	end tell
	delay 1
	tell application "System Events"
		try
			tell process "Messages"
				tell application "System Events" keystroke "N" using command down
				delay 1
				set value of text area 1 of scroll area 4 of splitter group 1 of window 1 to item 1 of argv
				delay 2
				keystroke return
				keystroke return
				delay 1
				key down command
				keystroke tab
				key up command
			end tell 
		on error errText number errNum
			display dialog "Error" + item 1 of argv
		end
	end tell
	tell application "Messages"
		delay 3
		quit
	end tell
end run